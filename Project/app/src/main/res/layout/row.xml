<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rowLinearLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/questID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"

                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:text="1"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rowQuest"
                android:layout_width="346dp"
                android:layout_height="70dp"
                android:layout_marginTop="76dp"
                android:layout_marginEnd="8dp"
                android:text="Title 1"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rowO1"
                android:layout_width="346dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:text="Auth 1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowQuest" />

            <TextView
                android:id="@+id/rowO2"
                android:layout_width="346dp"
                android:layout_height="25dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="4dp"
                android:text="Auth 1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowO1" />

            <TextView
                android:id="@+id/rowO3"
                android:layout_width="346dp"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:text="Auth 1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowO2" />

            <TextView
                android:id="@+id/rowO4"
                android:layout_width="346dp"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:text="Auth 1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowO3" />

            <TextView
                android:id="@+id/rowO5"
                android:text="Auth 1"
                android:layout_width="346dp"
                android:layout_height="25dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="4dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowO4" />

            <TextView
                android:id="@+id/rightAnswerTextView"
                android:text="Cevap"
                android:layout_width="346dp"
                android:textColor="#FF018786"
                android:layout_height="25dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="4dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowO5" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>